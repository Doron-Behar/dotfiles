[user]
	email = doron.behar@gmail.com
	name = Doron Behar
[core]
	editor = nvim
	pager = less -r
[credential]
	helper = cache --timeout=300
[credential "https://github.com"]
	username = Doron-Behar
[diff]
	tool = vimdiff
[alias]
	d = difftool
	l = log --decorate --all --graph
	co = checkout
	cmt = commit
	st = status
	br = branch
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	ls = ls-files
	m = mergetool
[difftool]
	prompt = true
[pager]
	stash = false
[merge]
	tool = vimdiff
	conflictstyle = diff3
[push]
	default = simple

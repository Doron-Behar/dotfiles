[user]
	email = doron.behar@gmail.com
	name = Doron Behar
[core]
	editor = vim
[credential]
	helper = cache --timeout=300
[diff]
	tool = vimdiff
[alias]
	d = difftool
	l = log --decorate --all --graph
	co = checkout
	cmt = commit
	st = status
	br = branch
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
[difftool]
	prompt = true
[pager]
	stash = false
[merge]
	tool = vimdiff
	conflictstyle = diff3

#!/bin/zsh
# {{{1 `zrc` reload zsh completion for a given command
zrc(){
	if [[ ! -z "$1" ]]; then
		unfunction "_$1"
		autoload "_$1" && return 0
	else
		echo please use this command with an argument > /dev/stderr
		return 1
	fi
}
# {{{1 for explanation, see ~/.functions (section `_create_fzf_function`)
for key in "${(@k)_FZF_DEFAULT_COMMAND}"; do
	eval $(_create_fzf_function "${key}" "${_FZF_DEFAULT_COMMAND[${key}]}" "${(L)key}" "${_FZF_DEFAULT_OPTS[${key}]}")
done

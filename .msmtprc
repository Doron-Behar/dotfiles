defaults
	auth on
	tls on
	tls_trust_file /etc/ssl/certs/ca-certificates.crt
	logfile ~/.msmtp.log

account gmail
	host smtp.gmail.com
	port 587
	from doron.behar@gmail.com
	user doron.behar
	auth plain
	passwordeval pass software/desktop/gmail-mutt

account vps
	host smtp.doronbehar.com
	from me@doronbehar.com
	user doron
	auth plain
	passwordeval pass hosts/vps/users/doron

account default : gmail


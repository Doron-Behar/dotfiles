# {{{1 enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
	test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
	# ls
	alias ls='ls --color=auto'
	alias cls='ls --color=always'
	# dir
	alias dir='dir --color=auto'
	alias vdir='vdir --color=auto'
	alias cdir='dir --color=always'
	alias cvdir='vdir --color=always'
	# grep
	alias grep='grep --color=auto'
	alias fgrep='fgrep --color=auto'
	alias egrep='egrep --color=auto'
	alias cgrep='grep --color=always'
	alias cfgrep='fgrep --color=always'
	alias cegrep='egrep --color=always'
	# diff
	alias diff='diff --color=auto'
	alias cdiff='diff --color=always'
	# always colored pacman and yay
	alias cpacman='pacman --color=always'
	# always colored ack
	alias cack='ack --color=always'
fi
# {{{1 Other aliases
# taskwarrior
alias tw=task
alias t=task
# YouTube-viewer perl application.
alias ytv='youtube-viewer'
# xdg-open
alias o='xdg-open'
# $EDITOR
alias v="$EDITOR"
alias e="$EDITOR"
# xclip
alias cxclip="xclip -selection clipboard"
alias pxclip="xclip -selection primary"
# colored cat: src-highlite
alias ccat='source-highlight --failsafe --infer-lang --out-format=esc --style-file=esc.style -i'
# systemctl poweroff/reboot
alias poweroff='systemctl poweroff'
alias reboot='systemctl reboot'
# lua interpreter with luarocks loaded in package.path
alias luar='lua -e package.path=package.path\ ..\ \"\;/usr/share/awesome/lib/\?/init.lua\;/usr/share/awesome/lib/\?.lua\" -i'
# lua interpreter with luarocks loaded in package.path including inspect for viewing tables
alias luari='lua -e package.path=package.path\ ..\ \"\;/usr/share/awesome/lib/\?/init.lua\;/usr/share/awesome/lib/\?.lua\" -e i\ =\ require\(\"inspect\"\) -i'
# visual/editor with GhostStart for quick launch
alias gvi="${VISUAL} +GhostStart"
# shortcut for launching GNU Octave with --no-gui
alias oct='octave --no-gui'
# Shortcut for python debugger
alias pdb='python -m pdb '
# Load local configuration files based on hostname
[[ -f "$HOME/.local/share/zsh/${TERM}/aliases" ]] && source "$HOME/.local/share/zsh/${TERM}/aliases"
[[ -f "$HOME/.local/share/zsh/${DISPLAY}/aliases" ]] && source "$HOME/.local/share/zsh/${DISPLAY}/aliases"
[[ -f "$HOME/.local/share/zsh/${VENDOR}/aliases" ]] && source "$HOME/.local/share/zsh/${VENDOR}/aliases"
[[ -f "$HOME/.local/share/zsh/${OSTYPE}/aliases" ]] && source "$HOME/.local/share/zsh/${OSTYPE}/aliases"
[[ -f "$HOME/.local/share/zsh/${HOST}/aliases" ]] && source "$HOME/.local/share/zsh/${HOST}/aliases"
[[ -f "$HOME/.local/share/zsh/${FQDN}/aliases" ]] && source "$HOME/.local/share/zsh/${FQDN}/aliases"
[[ -f "$HOME/.local/share/zsh/${DOMAIN}/aliases" ]] && source "$HOME/.local/share/zsh/${DOMAIN}/aliases"


# {{{1 mutt / neomutt
if _command_exists mutt; then
	# nvim is buggy with Hebrew / RTL writing :(, see https://github.com/neovim/neovim/issues/12032
	alias gmut="env MUTT_ACCOUNT=gmail VISUAL=vim mutt -f +gmail/INBOX"
	alias vmut="env MUTT_ACCOUNT=gandi VISUAL=vim mutt -f +gandi/INBOX"
	alias tmut="env MUTT_ACCOUNT=technion VISUAL=vim mutt -f +technion/INBOX"
fi
if _command_exists neomutt; then
	alias gmut="env MUTT_ACCOUNT=gmail VISUAL=vim neomutt -f +gmail/INBOX"
	alias vmut="env MUTT_ACCOUNT=gandi VISUAL=vim neomutt -f +gandi/INBOX"
	alias tmut="env MUTT_ACCOUNT=technion VISUAL=vim neomutt -f +technion/INBOX"
fi

# vim:ft=sh:foldmethod=marker
